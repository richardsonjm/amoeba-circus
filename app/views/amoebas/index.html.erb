<h1>Listing amoebas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Talent</th>
      <th>Act</th>
      <th>Generation</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @amoebas.each do |amoeba| %>
      <tr>
        <td><%= amoeba.name %></td>
        <td><%= @talents.find(amoeba.talent_id).name %></td>
        <% if amoeba.act_id %>
          <td><%= @acts.find(amoeba.act_id).name %></td>
        <% else %>
          <td>*none*</td>
        <% end %>
        <td><%= amoeba.generation %></td>
        <td><%= link_to 'Show', amoeba %></td>
        <td><%= link_to 'Edit', edit_amoeba_path(amoeba) %></td>
        <td><%= link_to 'Destroy', amoeba, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

