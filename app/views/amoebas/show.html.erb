<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @amoeba.name %>
</p>

<p>
  <strong>Talent:</strong>
  <%= @talents.find(@amoeba.talent_id).name %>
</p>

<p>
  <strong>Act:</strong>
  <% if @amoeba.act_id %>
    <%= @acts.find(@amoeba.act_id).name %>
  <% else %>
    *none*
  <% end %>
</p>


<p>
  <strong>Generation:</strong>
  <%= @amoeba.generation %>
</p>

<p>
  <strong><a href="/amoebas/<%= @amoeba.id %>/split">Split</a></strong>
</p>

<%= link_to 'Edit', edit_amoeba_path(@amoeba) %> |
